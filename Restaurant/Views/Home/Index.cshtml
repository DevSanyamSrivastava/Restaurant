@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeMaster.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Image Slider</title>

    <!-- AOS (Animate On Scroll) CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>

        /* Content box section with transparent background */
        .content-box {
            position: relative;
            background: rgba(255, 255, 255, 0.5); /* Transparent white background */
            border: 2px solid #ddd;
            padding: 20px;
            border-radius: 10px;
            margin-top: 30px;
        }

            /* Rectangle image in the top-right corner */
            .content-box .rectangle-image {
                position: absolute;
                top: 10px;
                right: 10px;
                width: 150px;
                height: 100px;
                background-image: url('~/Content/img/Slider.jpg'); /* Example image */
                background-size: cover;
                background-position: center;
                border-radius: 5px;
            }

            .content-box h3 {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .content-box p {
                font-size: 16px;
                margin-bottom: 20px;
            }

            .content-box .btn {
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
            }

            
/*End here*/
        .carousel-item img {
            width: 100%;
            height: 500px;
            object-fit: cover;
        }

        .card img {
            height: 200px;
            object-fit: cover;
            border-radius: 0.25rem; /* Border radius for the card image */
        }

        .card-body {
            border-radius: 0.25rem; /* Border radius for the card body */
        }

        .more-content {
            display: none;
            margin-top: 10px;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
    </style>
</head>
<body>

    <!-- Bootstrap Carousel with autoplay -->
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-aos="fade-right" data-bs-interval="3000">

        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
                <img src="~/Content/img/Slider.jpg" class="d-block w-100" alt="Image 1">
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item" data-aos="zoom-in" data-aos-duration="1000" data-aos-delay="200">
                <img src="~/Content/img/Slider2.jpg" class="d-block w-100" alt="Image 2">
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="300">
                <img src="~/Content/img/Slider3.jpg" class="d-block w-100" alt="Image 3">
            </div>
        </div>
    </div>

    <!-- Cards Section Below Slider -->
    <div class="container mt-5">
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
                <div class="card rounded-3">
                    <img src="~/Content/img/card/Card4.jpg" class="card-img-top rounded-3" alt="Card Image 1">
                    <div class="card-body">
                        <h5 class="card-title">Card Title 1</h5>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec vehicula urna in sapien.</p>
                        <button class="btn btn-primary" onclick="toggleContent(1)">Read More</button>
                        <div id="more-content-1" class="more-content">
                            <p>This is the additional content shown after clicking Read More for Card 1.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                <div class="card rounded-3">
                    <img src="~/Content/img/card/Card3.jpg" class="card-img-top rounded-3" alt="Card Image 2">
                    <div class="card-body">
                        <h5 class="card-title">Card Title 2</h5>
                        <p class="card-text">Suspendisse potenti. Nulla facilisi. Phasellus sit amet lacus sed urna suscipit interdum.</p>
                        <button class="btn btn-primary" onclick="toggleContent(2)">Read More</button>
                        <div id="more-content-2" class="more-content">
                            <p>This is the additional content shown after clicking Read More for Card 2.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="300">
                <div class="card rounded-3">
                    <img src="~/Content/img/card/Card2.jpg" class="card-img-top rounded-3" alt="Card Image 3">
                    <div class="card-body">
                        <h5 class="card-title">Card Title 3</h5>
                        <p class="card-text">Curabitur tincidunt magna sed ante vestibulum, vel posuere nulla iaculis.</p>
                        <button class="btn btn-primary" onclick="toggleContent(3)">Read More</button>
                        <div id="more-content-3" class="more-content">
                            <p>This is the additional content shown after clicking Read More for Card 3.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col-md-3 mb-4" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
                <div class="card rounded-3">
                    <img src="~/Content/img/card/Card1.jpg" class="card-img-top rounded-3" alt="Card Image 4">
                    <div class="card-body">
                        <h5 class="card-title">Card Title 4</h5>
                        <p class="card-text">Nam sollicitudin lorem ut sapien tincidunt, a lobortis felis dapibus.</p>
                        <button class="btn btn-primary" onclick="toggleContent(4)">Read More</button>
                        <div id="more-content-4" class="more-content">
                            <p>This is the additional content shown after clicking Read More for Card 4.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Box Section -->
    <div class="container mt-5">
        <div class="content-box w-100 " style="height:250px" data-aos="fade-left" data-aos-duration="1000">
            <div class="rectangle-image">
                <img style="position: absolute; top: 10px; right: 10px; width: 359px; height: 205px;background-size: cover; background-position: center; border-radius: 5px;" src="~/Content/img/Slider.jpg" />
            </div>
            <h3>Explore Our Menu</h3>
            <p>Discover our latest dishes and promotions. Click the button below to see our full menu!</p>
            <a href="./Menu" class="btn btn-primary" style="margin-top:30px; margin-left:20px;">Menu</a>
        </div>
    </div>


    <!-- Bootstrap and AOS JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
   


    <script>
        // Initialize AOS (Animate On Scroll)
        AOS.init();

        // Function to toggle the visibility of additional content
        function toggleContent(cardNumber) {
            var content = document.getElementById('more-content-' + cardNumber);
            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
            } else {
                content.style.display = 'none';
            }
        }
    </script>
</body>
</html>
