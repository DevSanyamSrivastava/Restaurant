@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/HomeMaster.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body.feedback-page {
            background-image: url('https://plus.unsplash.com/premium_photo-1691030658477-1c8decbdfb18?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8aW5kaWFuJTIwc3dlZXR8ZW58MHx8MHx8fDA%3D');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0; 
        }

        .feedback-form-container {
            background: rgba(255, 255, 255, 0.4); /* Semi-transparent background */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-icon {
            margin-right: 10px;
        }

        .submit-btn {
            background-color: #007bff;
            color: white;
        }

            .submit-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body class="feedback-page" style="background-image: url('https://plus.unsplash.com/premium_photo-1691030658477-1c8decbdfb18?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8aW5kaWFuJTIwc3dlZXR8ZW58MHx8MHx8fDA%3D'); background-size: contain; ">
    <div class="feedback-form-container" style="margin-left:30%">
        <h2 class="text-center mb-4">Feedback Form</h2>
        <form action="#" method="POST">
            <!-- Name Field -->
            <div class="mb-3">
                <label for="name" class="form-label"><i class="fas fa-user form-icon"></i>Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <!-- Gender Field -->
            <div class="mb-3">
                <label for="gender" class="form-label"><i class="fas fa-venus-mars form-icon"></i>Gender</label>
                <input type="text" class="form-control" id="gender" name="gender" required>
            </div>
            <!-- Contact Field -->
            <div class="mb-3">
                <label for="contact" class="form-label"><i class="fas fa-phone-alt form-icon"></i>Contact</label>
                <input type="text" class="form-control" id="contact" name="contact" required>
            </div>
            <!-- Feedback Field -->
            <div class="mb-3">
                <label for="feedback" class="form-label"><i class="fas fa-comment form-icon"></i>Feedback</label>
                <textarea class="form-control" id="feedback" name="feedback"></textarea>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn submit-btn w-100">Submit Feedback</button>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
