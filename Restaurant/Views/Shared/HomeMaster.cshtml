<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        /* Apply the font style specifically to the navbar */
        .navbar-home {
            font-family: 'Poppins', sans-serif !important; /* Force usage of Poppins font */
        }

            /* Hover effect for navbar links */
            .navbar-home .navbar-nav .nav-link {
                position: relative;
                transition: color 0.3s ease, transform 0.3s ease;
            }

                .navbar-home .navbar-nav .nav-link:hover {
                    color: #007bff !important; /* Make the hover color override any other styles */
                    transform: scale(1.1) !important;
                }

                .navbar-home .navbar-nav .nav-link::after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 2px;
                    bottom: -2px;
                    left: 0;
                    background-color: #007bff;
                    transition: width 0.3s ease;
                }

                .navbar-home .navbar-nav .nav-link:hover::after {
                    width: 100% !important;
                }

        /* Footer Styling */
        .footer-home footer.bg-dark {
            background-color: #212529 !important;
        }

        .footer-home .social-links a {
            text-decoration: none;
            color: white !important;
            transition: all 0.3s ease;
        }

            .footer-home .social-links a:hover {
                color: #007bff !important;
            }

        .footer-home .social-links i {
            margin-right: 8px;
        }

        .footer-home .footer h5 {
            font-weight: bold;
            color: white;
        }

        /* Use !important to ensure the background styling doesn't get overridden */
        .footer-home footer .container {
            background-color: #212529 !important;
        }
    </style>
</head>

<body class="navbar-home footer-home">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" data-aos="fade-down" data-aos-duration="800">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="/Home/Index" data-aos="fade-right" data-aos-duration="1000">
                <img src="~/Content/img/logo1.svg" alt="Logo" width="125" height="50" class="d-inline-block align-text-top" />
            </a>

            <!-- Toggle button for mobile view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" data-aos="zoom-in" data-aos-duration="800">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-3">
                    <li class="nav-item" data-aos="fade-up" data-aos-duration="600" data-aos-delay="100">
                        <a class="nav-link active fw-bold" aria-current="page" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item fw-bold" data-aos="fade-up" data-aos-duration="600" data-aos-delay="200">
                        <a class="nav-link" href="/Home/Menu">Menu</a>
                    </li>
                    <li class="nav-item fw-bold" data-aos="fade-up" data-aos-duration="600" data-aos-delay="300">
                        <a class="nav-link" href="/Home/Catering">Catering</a>
                    </li>
                    <li class="nav-item fw-bold" data-aos="fade-up" data-aos-duration="600" data-aos-delay="400">
                        <a class="nav-link" href="/Home/Galley">Gallery</a>
                    </li>
                    <li class="nav-item" data-aos="fade-up" data-aos-duration="600" data-aos-delay="500">
                        <a class="nav-link fw-bold" href="/Home/Feedback">Feedback</a>
                    </li>
                    <li class="nav-item" data-aos="fade-up" data-aos-duration="600" data-aos-delay="600">
                        <a class="nav-link fw-bold" href="#">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4 !important">
        <div class="container !important" style="background-color:#212529;">
            <div class="row">
                <!-- First Section: Address -->
                <div class="col-md-4">
                    <h5>Our Address</h5>
                    <p>1234 Main Street,<br>City, Country 12345</p>
                </div>

                <!-- Second Section: Social Links -->
                <div class="col-md-4 social-links">
                    <h5>Follow Us</h5>
                    <div>
                        <a href="https://facebook.com" class="me-3 d-inline-block">
                            <i class="fa fa-facebook fa-2x"></i> Facebook
                        </a> <br>
                        <a href="https://twitter.com" class="me-3 d-inline-block">
                            <i class="fa fa-twitter fa-2x"></i> Twitter
                        </a> <br>
                        <a href="https://instagram.com" class="me-3 d-inline-block">
                            <i class="fa fa-instagram fa-2x"></i> Instagram
                        </a> <br>
                        <a href="https://linkedin.com" class="d-inline-block">
                            <i class="fa fa-linkedin fa-2x"></i> LinkedIn
                        </a>
                    </div>
                </div>

                <!-- Third Section: Copyright -->
                <div class="col-md-4 text-md-end">
                    <p>&copy; 2024 Your Company. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- AOS JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        // Initialize AOS
        AOS.init();
    </script>
</body>

</html>
